FROM node:23-alpine AS base
RUN corepack enable

FROM base AS dependencies
WORKDIR /app
# Copy package files first to leverage Docker cache
COPY package.json pnpm-lock.yaml ./
RUN npm install -g pnpm --force
# Install dependencies
RUN pnpm install --frozen-lockfile

FROM dependencies AS builder
WORKDIR /app
# Copy source code after installing dependencies
COPY . .
# Build the application
RUN pnpm build

FROM base AS runner
WORKDIR /app

# Create non-root user
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nestjs && \
    mkdir -p /app/logs && \
    chown nestjs:nodejs /app/logs

# Copy only necessary files for production
COPY --from=builder --chown=nestjs:nodejs /app/package.json /app/package.json
COPY --from=builder --chown=nestjs:nodejs /app/pnpm-lock.yaml /app/pnpm-lock.yaml
COPY --from=builder --chown=nestjs:nodejs /app/dist /app/dist

# Install only production dependencies
RUN npm install -g pnpm --force && \
    pnpm install --prod --frozen-lockfile

# Use non-root user
USER nestjs

# Set environment variables
ENV PORT=3001
ENV NODE_ENV=production

EXPOSE 3001

CMD ["node", "dist/main"]